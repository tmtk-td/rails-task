<h1>タスク一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.content %></td>
    <td><%= link_to '内容を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新しくタスクを入力する', new_task_path %><%= @tasks %>
